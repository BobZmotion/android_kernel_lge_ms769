config SUBPMIC_RT8053
	bool "SUB PMIC RT8053"
	default n
	help
	  Support for RT8053 SUB PMIC driver.

config SUBPMIC_LP8720
	bool "SUB PMIC LP8720"
	default n
	help
	  Support for LP8720 SUB PMIC driver.
