config LGE_BROADCAST_TDMB_T3900
	bool "LGE broacast TDMB T3900 device"
	depends on LGE_BROADCAST_TDMB && (MACH_LGE_P2_SU540 || MACH_LGE_P2_KU5400 || MACH_LGE_P2_LU5400)\
	default y
	help
	  Select this if you want to use broadcast service	  	  

